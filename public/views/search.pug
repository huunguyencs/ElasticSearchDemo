extends layouts/_layout.pug

block variables
	- var activePage = img;
	- var activeGroup = 'none';

block title
	title !{page}

block content
	.app-title
		div
			h1
				img(src="resources/images/"+img+".png", width="30px" class="mr-3")
				|  !{page}
			p Start a beautiful journey here
	.row
		.col-md-12
			.tile
				h3.tile-title Search !{page}
				.tile-body
					form(action="/search" method="POST")
						.form-group
							label.control-label Team
							input.form-control(type="text", placeholder="Input team's name", name="team")

						.form-group.row
							.col-md-2
								label.control-label From date
								input.form-control(type="date" name="fromdate" min="2019-08-05" max="2020-08-05")
							.col-md-2
								label.control-label To date
								input.form-control(type="date", name="todate" min="2019-08-05" max="2020-08-05")

							input(hidden, name="page", value=page)
							input(hidden, name="img", value=img)
						

						button.btn.btn-primary(type="submit")
							i.fa.fa-fw.fa-lg.fa-check-circle
							| Search

	.row
